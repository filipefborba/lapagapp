<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/main_content"
    >

    <CalendarView
        android:id="@+id/simpleCalendarView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:dateTextAppearance="@style/TextAppearance.AppCompat"
        android:elevation="1dp"
        android:focusedMonthDateColor="@color/colorAccent"
        android:maxDate="31/12/2020"
        android:minDate="01/01/2017"
        android:unfocusedMonthDateColor="@color/black_overlay"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Button"
        android:weekSeparatorLineColor="@color/aprovadas" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fillViewport="true"
        android:orientation="horizontal"
        android:scrollbars="vertical"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/simpleCalendarView"
        android:layout_marginTop="40dp">

        <View
            android:id="@+id/bloco"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:background="#00CD66"
            />

        <TextView
            android:id="@+id/total"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_total"
            android:text="Total"
            android:textSize="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/valor_total"
            android:layout_width="160dp"
            android:layout_height="58dp"
            android:background="@drawable/rectangle_valor"
            android:text="R$ 574.04"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>
