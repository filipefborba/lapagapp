<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gmore.lapag.profileActivity"
    tools:showIn="@layout/app_bar_profileactivity">

    <TextView
        android:id="@+id/personalInformationTitle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/areceber"
        android:drawableLeft="@android:drawable/ic_menu_preferences"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="Informações Pessoais"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="254dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/personalInformationTitle">

        <TextView
            android:id="@+id/professionalnameLabel"
            android:layout_width="350dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/professionalname"
            android:padding="5dp"
            android:text="Nome do Profissional:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/professionalname"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/documentType"
            android:layout_marginTop="26dp"
            android:background="@drawable/rounded_corner"
            android:padding="7dp"
            android:text="Camila Silva"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/documentLabel"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_above="@+id/documentNumber"
            android:layout_alignStart="@+id/documentType"
            android:padding="5dp"
            android:text="Tipo e Número do Documento:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/documentType"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/professionalname"
            android:layout_marginStart="14dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/rounded_corner"
            android:padding="7dp"
            android:text="CPF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/documentNumber"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignBaseline="@+id/documentType"
            android:layout_alignBottom="@+id/documentType"
            android:layout_alignEnd="@+id/documentLabel"
            android:layout_marginStart="13dp"
            android:layout_toRightOf="@+id/documentType"
            android:background="@drawable/rounded_corner"
            android:padding="7dp"
            android:text="463.167.894-97"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cellphoneNumberLabel"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/cellphoneNumber"
            android:layout_below="@+id/documentType"
            android:layout_marginTop="13dp"
            android:padding="5dp"
            android:text="Celular:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cellphoneNumber"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/documentType"
            android:layout_below="@+id/documentType"
            android:layout_marginTop="42dp"
            android:background="@drawable/rounded_corner"
            android:padding="7dp"
            android:text="(11) 91328-9813"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
